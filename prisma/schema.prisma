generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Rol {
  id        BigInt     @id @default(autoincrement())
  nombre    String     @db.VarChar(150)
  permisos  Json?      @db.Json
  create_at DateTime   @default(now()) @db.Timestamp(6)
  update_at DateTime   @updatedAt @db.Timestamp(6)
  activo    Boolean    @default(true)
  usuarios  Usuarios[]

  @@map("roles")
}

model Usuarios {
  id                  BigInt       @id @default(autoincrement())
  id_rol              BigInt
  nombre              String       @db.VarChar(250)
  apellido            String       @db.VarChar(250)
  email               String       @unique @db.VarChar(250)
  password            String       @db.VarChar
  create_at           DateTime     @default(now()) @db.Timestamp(6)
  update_at           DateTime     @updatedAt @db.Timestamp(6)
  activo              Boolean      @default(true)
  articulos_creados   Articulos[]  @relation("ArticuloCreadoPor")
  articulos_editados  Articulos[]  @relation("ArticuloEditadoPor")
  categorias_creadas  Categorias[] @relation("CategoriaCreadaPor")
  categorias_editadas Categorias[] @relation("CategoriaEditadaPor")
  logs                Log[]
  rol                 Rol          @relation(fields: [id_rol], references: [id], onDelete: Cascade)

  @@map("usuarios")
}

model Categorias {
  id        BigInt      @id @default(autoincrement())
  nombre    String      @db.VarChar(250)
  create_at DateTime    @default(now()) @db.Timestamp(6)
  update_at DateTime    @updatedAt @db.Timestamp(6)
  create_by BigInt?
  update_by BigInt?
  activo    Boolean     @default(true)
  articulos Articulos[]
  creador   Usuarios?   @relation("CategoriaCreadaPor", fields: [create_by], references: [id])
  editor    Usuarios?   @relation("CategoriaEditadaPor", fields: [update_by], references: [id])

  @@map("categorias")
}

model Articulos {
  id           BigInt         @id @default(autoincrement())
  id_categoria BigInt
  titulo       String         @db.VarChar
  contenido    Json?          @db.Json
  create_at    DateTime       @default(now()) @db.Timestamp(6)
  update_at    DateTime       @updatedAt @db.Timestamp(6)
  create_by    BigInt?
  update_by    BigInt?
  activo       Boolean        @default(true)
  creador      Usuarios?      @relation("ArticuloCreadoPor", fields: [create_by], references: [id])
  categoria    Categorias     @relation(fields: [id_categoria], references: [id], onDelete: Cascade)
  editor       Usuarios?      @relation("ArticuloEditadoPor", fields: [update_by], references: [id])
  imagenes     ImgArticulos[]

  @@map("articulos")
}

model ImgArticulos {
  id          BigInt    @id @default(autoincrement())
  id_articulo BigInt
  url         String    @db.VarChar
  orden       BigInt
  create_at   DateTime  @default(now()) @db.Timestamp(6)
  articulo    Articulos @relation(fields: [id_articulo], references: [id], onDelete: Cascade)

  @@map("img_articulos")
}

model Log {
  id            BigInt   @id @default(autoincrement())
  user_id       BigInt
  tabla         String   @db.VarChar
  accion        String   @db.VarChar
  previous_data Json?    @db.Json
  after_data    Json?    @db.Json
  create_at     DateTime @default(now()) @db.Timestamp(6)
  usuario       Usuarios @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@map("logs")
}

model FaqSecciones {
  id        BigInt         @id @default(autoincrement())
  titulo    String         @db.VarChar(250)
  orden     Int            @default(0)
  activo    Boolean        @default(true)
  create_at DateTime       @default(now()) @db.Timestamp(6)
  update_at DateTime       @updatedAt @db.Timestamp(6)
  preguntas FaqPreguntas[]

  @@map("faq_secciones")
}

model FaqPreguntas {
  id         BigInt       @id @default(autoincrement())
  id_seccion BigInt
  pregunta   String       @db.VarChar(500)
  respuesta  String
  orden      Int          @default(0)
  activo     Boolean      @default(true)
  create_at  DateTime     @default(now()) @db.Timestamp(6)
  update_at  DateTime     @updatedAt @db.Timestamp(6)
  seccion    FaqSecciones @relation(fields: [id_seccion], references: [id], onDelete: Cascade)

  @@map("faq_preguntas")
}
